{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "<%= appname %>",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/bin/<%= appname %>",
            "preLaunchTask": "make",
            "internalConsoleOptions": "openOnFirstSessionStart",
            "stopAtEntry": false,
            "cwd": "${workspaceRoot}/bin",
            "externalConsole": false,
            "osx": {
                "MIMode": "lldb"
            },
            "logging": {
                "programOutput": true
            }
        }
    ]
}
